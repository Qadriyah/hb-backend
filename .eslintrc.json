{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb", "prettier", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "js": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "linebreak-style": 0
  }
}
